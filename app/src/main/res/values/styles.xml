<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deepKoamaru</item>
        <item name="colorPrimaryDark">@color/deepCove</item>
        <item name="colorAccent">@color/pureApple</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/wizardGrey</item>
        <item name="colorControlActivated">@color/pureApple</item>
        <item name="android:textColorHint">@color/wizardGrey</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
